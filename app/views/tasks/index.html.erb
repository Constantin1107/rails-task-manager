<div class="m-5">
  <h1>Here are all your tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <p><i class="fa-regular fa-square-check"></i></p>
      <% else %>
        <p><i class="fa-regular fa-square"></i></p>
      <% end %>
        <%= link_to task.title, task_path(task.id) , :class => 'text-decoration-none text-dark display-4'%>
        <%= link_to "Delete", task_path(task),data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{task.title}?"}, :class => 'btn btn-danger'%>
    </li>
    <% end %>
  </ul>
  <p><%= link_to 'Add a new task', new_path , :class => 'btn btn-primary'%></p>
</div>
